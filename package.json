{
  "name": "performance-web",
  "private": true,
  "devDependencies": {
    "clean-css-cli": "^5.6.3",
    "html-minifier-terser": "^7.2.0",
    "terser": "^5.31.0"
  },
  "scripts": {
    "min:css": "cleancss -o after/styles.min.css after/styles.css",
    "min:js": "terser after/js/app.js -o after/js/app.min.js -c -m",
    "min:html": "html-minifier-terser --collapse-whitespace --remove-comments --minify-css true --minify-js true -o after/index.html after/index.html",
    "serve": "npx http-server -p 3000 ."
  }
}
